<div id="content">
  <h2 align="center"><%= @movie.movie_name %></h2>
    <h5>Certificate: <%= @movie.certificate %></h5> 
    <h5>Duration: <%= @movie.duration.getutc.min + 60 * @movie.duration.getutc.hour %> minutes</h5>
    <h5>Language: <%= @movie.language %></h5>
    <h5>Release Date: <%= @movie.release_date %></h5></br>
    <h4 align="center"><%= @movie.description %></h4>
    
</div>
<div id="image">
<p><img src="<%= @movie.image_url %>" alt="<%= @movie.movie_name %>" width="351" height="280"></p>
</div>

<% 23.times do %>
  <br />
 <% end %>
<% if @admin_user %>
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
<% end %>
<%= link_to 'Back', movies_path %>
