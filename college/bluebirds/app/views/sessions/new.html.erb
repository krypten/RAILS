<% 3.times do %>
  <br />
<% end %> 

<div class="user_form">
<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
  <fieldset>
  <h2>Please Log In</h2>
  <div>
    <%= label_tag :username, 'Name:' %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  
  <div>
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password] %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
  <div>
  <br />
  <%= link_to 'Forgot Password', {:action => 'forgot'} %>
  </fieldset>
<% end %>