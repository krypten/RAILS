

<div class="user_form">
<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
  <fieldset>
  <h3>Please Enter your Username</h3>

  <div>
    <legend></legend>
    <%= label_tag :username, 'Username:   ' %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <br />
  <div>
    <%= submit_tag "Send Email" %>
  </div>
  
<% end %>